{
  "AzureOpenAI": {
    "Endpoint": "https://your-resource.openai.azure.us/",
    "ApiKey": "your-fedramp-api-key",
    "DeploymentName": "gpt-4",
    "ChatDeploymentName": "gpt-4",
    "FastChatDeploymentName": "gpt-4-turbo",
    "EmbeddingDeploymentName": "text-embedding-ada-002",
    "ApiVersion": "2024-02-15-preview",
    "MaxTokens": 8000,
    "Temperature": 0.1,
    "TopP": 0.95,
    "FrequencyPenalty": 0.0,
    "PresencePenalty": 0.0,
    "UsePrivateEndpoint": true,
    "VNetIntegration": true
  },
  "FedRAMPSettings": {
    "Environment": "AzureGovernment",
    "DataResidency": "US",
    "ComplianceLevel": "FedRAMP-High",
    "AuditLogging": true,
    "EncryptionAtRest": true,
    "EncryptionInTransit": true
  },
  "MTAnalysisSettings": {
    "UseIntelligentAnalysis": true,
    "EnableEmbeddings": true,
    "ConfidenceThreshold": 0.8,
    "MaxContextLength": 16000,
    "EnableAuditTrail": true,
    "LogUserInteractions": true,
    "RetainConversationHistory": false
  },
  "Security": {
    "RequireAuthentication": true,
    "UseKeyVault": true,
    "KeyVaultUrl": "https://your-keyvault.vault.azure.us/",
    "ManagedIdentity": true
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "MTAnalyzer.Services": "Information"
    },
    "ApplicationInsights": {
      "InstrumentationKey": "your-ai-key",
      "CloudRole": "DocumentAI-Backend"
    }
  }
}
